    <element id="Diagnose.SNOMEDDiagnoseKodiert.Körperstelle">
      <path value="Diagnose.SNOMEDDiagnoseKodiert.Körperstelle" />
      <short value="Über die Körperstelle kann angegeben werden, in welchem Bereich des Körpers eine Krankheit diagnostiziert wurde." />
      <min value="0" />
      <max value="*" />
      <type>
        <code value="code" />
        <profile value="http://hl7.org/fhir/StructureDefinition/code" />
      </type>
    </element>
    <element id="Diagnose.SNOMEDDiagnoseKodiert.Seitenlokalisation">
